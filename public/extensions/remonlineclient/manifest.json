{
  "manifest_version": 3,
  "name": "Remonline Client Data",
    "version": "2.1",
  "description": "Calls",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "webRequest",
    "webNavigation"
  ],
  "host_permissions": [
    "https://web.roapp.io/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://web.roapp.io/*"],
        "js": [
            "settings.js"
        ]
    },

    {
        "matches": [
            "https://web.roapp.io/*"
        ],
        "exclude_matches": [
            "https://web.roapp.io/login"
        ],
        "js": [
            "content.js"
        ],
      "run_at": "document_end"
    }
  ]
}
